@model List<Tid__og_sagsregistreringssystem.Models.Department>

@{
    ViewData["Title"] = "Employee";
}

<h1>Employees</h1>

<div>
    <h4>Employee</h4>
    <hr />
    @foreach (var department in ViewBag.Departments) 
    {
        foreach (var employee in ViewBag.Employees) {
            <div class="employee-details">
                <p>
                    <b>Navn:</b>
                    <span>@employee.GetName()</span>
                </p>

                <p>
                    <b>Initialer:</b>
                    <span>@employee.GetInitials()"</span>
                </p>

                <p>
                    <b>CPR:</b>
                    <span>@employee.GetCpr()</span>
                </p>
            </div>
        }
    }

</div>
